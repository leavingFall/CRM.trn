@using CRM.Web.DAL
@using CRM.Web.Models
@model Client
@{
    ViewBag.Title = "Add Client Wizard";
}
@using (Html.BeginForm())
{
    <br/>
    <h2>@ViewBag.Title</h2>
    <table>
        <tr>
            <td>Name:</td>
            <td>@(Html.TextBoxFor(m => m.Name))</td>
        </tr>
        <tr>
            <td>TaxId:</td>
            <td>@(Html.TextBoxFor(c => c.TaxId))</td>
        </tr>
        <tr>
            <td>Address:</td>
            <td>@(Html.EditorFor(c => c.Address))</td>
        </tr>
    </table>
    <br/>

    <input type="submit" formaction="@Url.Action("Back")" value="Back" style="margin-right: 5px" />
    <input type="submit" formaction="@Url.Action("Cancel")" value="Cancel" style="margin-right: 5px" />
    <input type="submit" value="OK" style="margin-right: 5px" />
}